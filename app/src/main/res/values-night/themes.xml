<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MACC" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_primary_material</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_primary_material</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <!-- Material Date Picker Customization -->
        <item name="android:datePickerDialogTheme">@style/CalendarDatePickerDialog</item>
        <!-- Material Range Date Picker Customization -->
        <!--<item name="materialCalendarTheme">@style/ThemeMaterialCalendar</item>-->
        <item name="materialCalendarFullscreenTheme">@style/CustomThemeOverlay_MaterialCalendar_Fullscreen</item>
    </style>
    <!-- Toolbar theme -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/black_primary_material</item>
    </style>
    <style name="PreferenceScreen" parent="Theme.MACC">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/grey_description</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/white</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used for the background -->
        <item name="android:background">@color/black_light_material</item>
    </style>
    <style name="CalendarDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <!--<item name="colorPrimary">#0000FF</item>
        <item name="colorPrimaryDark">#FF9900</item>-->
        <!--header background-->
        <item name="colorAccent">@color/black_primary_material</item>
        <!--calendar background-->
        <item name="android:windowBackground">@color/black_light_material</item>
        <!--days of the month-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--days of the week-->
        <item name="android:textColorSecondary">@color/white</item>
        <!--selected day-->
        <!--<item name="android:colorControlActivated">@color/purple_200</item>-->
    </style>
    <!--<style name="ThemeMaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="buttonBarPositiveButtonStyle">@style/ThemeMaterialCalendarButton</item>
    </style>
    <style name="ThemeMaterialCalendarButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple_200</item>
    </style>-->

    <!--PER CAMBIARE DA FULL SCREEN A FINESTRA-->
    <style name="CustomThemeOverlay_MaterialCalendar_Fullscreen"
        parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="materialCalendarStyle">@style/Custom_MaterialCalendar.Fullscreen</item>
        <item name="textInputStyle">@style/Custom_Widget.App.TextInputLayout</item>
    </style>
    <style name="Custom_MaterialCalendar.Fullscreen"
        parent="@style/Widget.MaterialComponents.MaterialCalendar.Fullscreen">
        <!--<item name="android:windowFullscreen">false</item>-->
        <item name="rangeFillColor">@color/black_light_material</item>
    </style>

    <style name="Custom_Widget.App.TextInputLayout" parent="">
        <item name="hintTextColor">@color/white</item>
    </style>
</resources>