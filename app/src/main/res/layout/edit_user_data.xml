<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <TextView
        android:id="@+id/edit_user_data_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Edit Data"
        android:textColor="@color/white"
        android:textSize="40dp" />
    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_user_data_title"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black_light_material"
        android:background="@drawable/shape_user_data"
        android:text="Name"
        android:textSize="30dp" />
    android:textSize="40dp" />
    <EditText
        android:id="@+id/user_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black_light_material"
        android:background="@drawable/shape_user_data"
        android:text="Surname"
        android:textSize="30dp" />
    android:textSize="40dp" />
    <EditText
        android:id="@+id/user_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_surname"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black_light_material"
        android:background="@drawable/shape_user_data"
        android:text="Nickname"
        android:textSize="30dp" />
    <EditText
        android:id="@+id/user_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_nickname"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black_light_material"
        android:background="@drawable/shape_user_data"
        android:text="Old password"
        android:textSize="30dp" />
    <EditText
        android:id="@+id/user_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_old_password"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black_light_material"
        android:background="@drawable/shape_user_data"
        android:text="New password"
        android:textSize="30dp" />
    <EditText
        android:id="@+id/user_repeat_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_new_password"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black_light_material"
        android:background="@drawable/shape_user_data"
        android:text="Repeat password"
        android:textSize="30dp" />
    <EditText
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_repeat_password"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black_light_material"
        android:background="@drawable/shape_user_data"
        android:text="Email"
        android:textSize="30dp" />
    <EditText
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_repeat_password"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black_light_material"
        android:background="@drawable/shape_user_data"
        android:text="Email"
        android:textSize="30dp" />
    <EditText
        android:id="@+id/user_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_email"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black_light_material"
        android:background="@drawable/shape_user_data"
        android:lines="5"
        android:gravity="top|left"
        android:text="Bio"
        android:textSize="30dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_bio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Save"
        android:textSize="30dp"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:cornerRadius="20dp"
        app:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:gravity="center"
        app:strokeColor="@color/black_light_material"/>


</RelativeLayout>