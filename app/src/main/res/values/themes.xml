<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MACC" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_primary_material</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_primary_material</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <!-- Material Date Picker Customization -->
        <item name="android:datePickerDialogTheme">@style/CalendarDatePickerDialog</item>
    </style>
    <!-- Toolbar theme -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/black_primary_material</item>
    </style>
    <style name="PreferenceScreen" parent="Theme.MACC">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/grey_description</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/white</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used for the background -->
        <item name="android:background">@color/black_light_material</item>
    </style>
    <style name="CalendarDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <!--<item name="colorPrimary">#0000FF</item>
        <item name="colorPrimaryDark">#FF9900</item>-->
        <!--header background-->
        <item name="colorAccent">@color/black_primary_material</item>
        <!--calendar background-->
        <item name="android:windowBackground">@color/black_light_material</item>
        <!--days of the month-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--days of the week-->
        <item name="android:textColorSecondary">@color/white</item>
        <!--selected day-->
        <!--<item name="android:colorControlActivated">@color/purple_200</item>-->
    </style>
</resources>